import random
import statistics

number_of_guesses = []

def start_game():
    print('Welcome, thank you for playing the guessing game!')
    solution = random.randint(1, 100)
    #print("Seed {}".format(solution))
    
    guess_input = 0
        
    while(guess_input != solution):
        user_input = input("Guess the number. ")
        try:
            guess_input = int(user_input)
            add_to_list(guess_input)
        except ValueError as err:
            print("There has been an error. Enter a whole number")
        else:
            if guess_input > solution:
                print ("Its lower")
                
            elif guess_input < solution:
                print ("Its higher")
                
            
    print ("You got it!")
    stats()
        
        
def add_to_list(num):
    number_of_guesses.append(num)
    
def display():
    for num in number_of_guesses:
        print(num)
                 
def stats():
    print("You have attempted the following numbers: {}".format(len(number_of_guesses)))

    results_mode = round(statistics.mode(number_of_guesses))
    print(f"The mode number is: {results_mode}")

    results_median = round(statistics.median(number_of_guesses))
    print(f"The median number is: {results_median}")

    results_mean = round(statistics.mean(number_of_guesses))
    print(f"The mean number is: {results_mean}")

    replay = input("Are you ready to play again?  Y/N ")

    if replay.lower() == "y":
        start_game()
    else:
        print('Thanks again for playing! Goodbye!')
        
            
start_game()
